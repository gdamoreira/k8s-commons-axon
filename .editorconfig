root = true

[*]
indent_style = space
indent_size = 2
continuation_indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.java]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = off

[*.py]
indent_style = space
indent_size = 4
continuation_indent_size = 4
max_line_length = off

[*.xml]
indent_style = space
indent_size = 4
continuation_indent_size = 0

[*.md]
max_line_length = off
trim_trailing_whitespace = false
